<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Coca"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bubble"
        tools:visibility="visible" />

    <Button
        android:id="@+id/see_invoice"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_invoice"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="See Invoice(s)"
        tools:visibility="visible" />

    <Button
        android:id="@+id/create_invoice"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coca"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="create new Invoice"
        tools:visibility="visible" />


</RelativeLayout>