<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Coca"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/driver2"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/issued"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coca"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="12dp"
        android:text="Issued:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/paid"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issued"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="Paid:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/delivered"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paid"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="Delivered:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivered"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="Total Price:"
        android:textColor="#881212"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/Item"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalPrice"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="Item:"
        android:textColor="#881212"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/individual_price"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Item"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="individual Prce"
        android:textColor="#881212"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/individual_price"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:text="Quantity:"
        android:textColor="#881212"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Pay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Invoice"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="260dp"
        android:text="Click to pay!" />


</RelativeLayout>