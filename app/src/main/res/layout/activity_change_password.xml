<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Driver"
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/driver2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/OriginalPassword"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="Original Password"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/oldPw"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/enter_your_old_password" />

    <TextView
        android:id="@+id/Changepw"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New Password" />

    <EditText
        android:id="@+id/newPw"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint = "@string/enter_your_new_password" />

    <TextView
        android:id="@+id/newPwAgain"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:hint = "@string/enter_your_new_password"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/newPwAgainInput"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:hint= "@string/enter_your_new_password"
        android:inputType="textPassword" />


</LinearLayout>