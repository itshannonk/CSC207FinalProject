<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Coca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/smile2"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/welcome_name"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="64dp"
        android:enabled="true"
        android:gravity="center"
        android:text="Create OR See Invoice Here"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/see_invoice"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_invoice"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="See Invoice(s)"
        tools:visibility="visible" />

    <Button
        android:id="@+id/create_invoice"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Coca"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="create new Invoice"
        tools:visibility="visible" />

    <Button
        android:id="@+id/see_customer_info"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/see_invoice"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="See Customer Info"
        tools:visibility="visible" />


</RelativeLayout>